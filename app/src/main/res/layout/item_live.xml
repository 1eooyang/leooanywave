<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    >

    <!--android:background="@drawable/cctv"-->
    <ImageView
        android:scaleType="fitXY"
        android:layout_marginTop="27dp"
        android:id="@+id/iv_title"
        android:layout_marginLeft="16dp"
        android:layout_width="90dp"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:text="CCTV-13"
            android:textColor="#FF000000"
            android:textSize="17sp" />

        <TextView
            android:maxEms="12"
            android:singleLine="true"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:id="@+id/tv_current_live"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginTop="8dp"
            android:text="当前节目: 新闻直播间"
            android:textColor="#FF000000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_start"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:text="10:00"
                android:textColor="#FF000000"
                android:textSize="10sp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">

                <View

                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_vertical"
                    android:background="#FF000000" />

                <View

                    android:layout_width="167dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_vertical"
                    android:background="#22000000" />


            </FrameLayout>


            <TextView
                android:id="@+id/tv_end"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:text="10:30"
                android:textColor="#FF000000"
                android:textSize="10sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">





        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:maxEms="12"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/tv_next"
                    android:layout_width="200dp"
                    android:layout_height="18dp"
                    android:text="10:35  舌尖上的中国（三）"
                    android:textColor="#88000000"
                    android:textSize="11sp" />


                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:id="@+id/ll_show"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!--<TextView-->
                    <!--android:fontFamily="sans-serif-light"-->
                    <!--android:layout_width="220dp"-->
                    <!--android:layout_height="18dp"-->
                    <!--android:text="10:35  舌尖上的中国（三）舌尖上的中国舌尖上的中国"-->
                    <!--android:textColor="#88000000"-->
                    <!--android:textSize="13sp" />-->

                </LinearLayout>

            </LinearLayout>


            <!--android:layout_alignParentBottom="true"-->
            <RelativeLayout
                android:paddingBottom="16dp"
                android:id="@+id/rl_pull"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--<FrameLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1">-->

                <!--</FrameLayout>-->

                <CheckBox
                    android:layout_alignParentTop="true"
                    android:clickable="false"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="false"
                    android:id="@+id/cb_pull"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"
                    style="@style/CustomCheckboxPull"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </LinearLayout>


        </LinearLayout>





        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#10000000" />

    </LinearLayout>


</LinearLayout>